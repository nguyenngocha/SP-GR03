<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
  <ul class="nav navbar-nav navbar-left">
    <li><%= link_to( image_tag("logo", :size => "40x40"), root_path, id: "logo_image" )%></li>
    <li><%= link_to "Online Store", root_path, id: "logo" %></li>
    </ul>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home",   root_path %></li>
        <li><%= link_to "Help",   help_path %></li>
        <% if logged_in? %>
          <li><%= link_to "User", users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to "Log out", logout_path, method: "delete" %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
          <li><%= link_to "Sign up", signup_path %></li>
        <% end %>
        <li><%= link_to root_path do %>
          <span class="glyphicon glyphicon-shopping-cart"></span>Cart<span class="badge">4</span>
          <% end %>
          </li>
      </ul>
    </nav>
  </div>
</header>